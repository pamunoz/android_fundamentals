<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.android.materialme.DetailActivity">

        <ImageView
            android:id="@+id/img_sport_image_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/cd_sport_image"/>

        <TextView
            android:id="@+id/tv_title_detail"
            style="@style/SportsDetailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/title_placeholder"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:layout_alignBottom="@id/img_sport_image_detail"/>

        <TextView
            android:id="@+id/tv_newsTitle_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            style="@style/SportsDetailText"
            android:text="@string/news_placeholder"
            android:textColor="?android:textColorSecondary"
            android:layout_below="@id/img_sport_image_detail"/>

        <TextView
            android:id="@+id/tv_subTitle_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            style="@style/SportsDetailText"
            android:text="@string/sport_detail"
            android:layout_below="@id/tv_newsTitle_detail"/>

    </RelativeLayout>
</ScrollView>
